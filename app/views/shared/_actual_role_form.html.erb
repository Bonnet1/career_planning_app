<%= form_for(@actual_role) do |f| %>
    <%= render 'shared/error_messages', object: f.object %>
    <div class="field">
      <%= f.text_area :organization, placeholder: "Organization name..." %>
      <%= f.text_area :role, placeholder: "Role..." %>
      <%= f.text_area :details, placeholder: "Details of your role there..." %>
      <%= f.date_field :start_date, as: :date, value: f.object.try(:strftime,"%m/%d/%Y"), class: 'form-control' %>
      <%= f.date_field :end_date, as: :date, value: f.object.try(:strftime,"%m/%d/%Y"), class: 'form-control' %>
    </div>
    <%= f.submit "Submit", class: "btn btn-primary" %>
  <% end %>